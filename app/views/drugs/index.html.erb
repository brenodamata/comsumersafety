<p id="notice"><%= notice %></p>

<h1>Drugs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Generic name</th>
      <th>Brand name</th>
      <th>Substance name</th>
      <th>Active substance name</th>
      <th>Indication</th>
      <th>Manufacturer</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drugs.each do |drug| %>
      <tr>
        <td><%= drug.name %></td>
        <td><%= drug.generic_name %></td>
        <td><%= drug.brand_name %></td>
        <td><%= drug.substance_name %></td>
        <td><%= drug.active_substance_name %></td>
        <td><%= drug.indication %></td>
        <td><%= drug.manufacturer %></td>
        <td><%= drug.category %></td>
        <td><%= link_to 'Show', drug %></td>
        <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
        <td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

